{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@config": ["src/config.ts"],
            "@lib/*": ["src/lib/*"],
            "@utils/*": ["src/utils/*"],
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true
    }
}
